{{> header}}
<link rel="stylesheet" href="./public/css/login.css">

<body class="bd-image" style="background-image: url('./public/imgs/Fondo.png')">
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="./public/imgs/Faquiz-Logo-small.png" id="icon" alt="User Icon"/>
            </div>

        {{#error}}
            <h2 style="color: red">error al loguearse</h2>
        {{/error}}

        <!-- Login Form -->
        <form action="/login/validar" method="POST">
            <input type="text" id="usuario" name="user_name" class="fadeIn second" name="login" required placeholder="Ingrese su usuario...">
            <input type="password" id="contrasenia" name="contrasenia" class="fadeIn third" name="login" required placeholder="Ingrese su contraseña...">
            <input type="submit" class="fadeIn fourth" value="Iniciar sesión">
        </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="#">¿Te olvidaste la contraseña?</a>
                <hr>
                <a class="underlineHover" href="/registro">¡Quiero registrarme!</a>
            </div>

        </div>
    </div>
</body>