{{> header}}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kit.fontawesome.com/90ab493dae.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/public/css/sugerir.css">
    <script src="/public/js/sugerirPregunta.js"></script>
    <title>Faquiz</title>
</head>
<body style="background-image: url('/public/imgs/Fondo.png'); color: ghostwhite;background-image: url('/public/imgs/Fondo.png');background-size: cover;">

        <div class="container-fluid text-center" style="overflow-x: hidden;">
            <form id="preguntaForm" action="sugerirPregunta/agregar" method="POST">
                <div class="row" style="margin-top: 1em;padding: 2em;">
                    <div class="col-12 col-lg-12">
                        <div class="card m-2 p-2 w-50 mx-auto">
                            <label for="name">Escriba la pregunta a sugerir:</label>
                            <input type="text" name="pregunta" id="pregunta" required size="50">
                        </div>
                    </div>
                </div>

                <div class="row" style="margin-top: 1em;padding: 2em;">
                    <div class="col-12 col-lg-12">
                        <div class="card m-2 p-2 w-25 mx-auto">
                            <label for="categoria" class="categoria-label">Seleccione la categor√≠a de la pregunta</label>
                            <select class="text-center" name="categoria" id="categoria">
                                <option value="0">Seleccione</option>
                                <option value="1">Historia</option>
                                <option value="2">Geografia</option>
                                <option value="3">Ciencia</option>
                                <option value="4">Arte</option>
                                <option value="5">Deportes</option>
                                <option value="6">Entretenimiento</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row" style="margin-top: 0.5em;padding: 4em;">
                    <div class="col-12 col-lg-6">
                        <div class="card m-2 w-50 mx-auto card-chica">
                            <div class="input-container">
                                <label for="respuesta1">Respuesta 1:</label><br>
                                <input type="radio" id="respuesta1" name="correcta" value="respuesta1" required>
                                <input type="text" id="respuesta1Text" name="respuesta1Text" required><br><br>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="card m-2 w-50 mx-auto card-chica">
                            <div class="input-container">
                                <label for="respuesta2">Respuesta 2:</label><br>
                                <input type="radio" id="respuesta2" name="correcta" value="respuesta2" required>
                                <input type="text" id="respuesta2Text" name="respuesta2Text" required><br><br>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="card m-2 w-50 mx-auto card-chica">
                            <div class="input-container">
                                <label for="respuesta3">Respuesta 3:</label><br>
                                <input type="radio" id="respuesta3" name="correcta" value="respuesta3" required>
                                <input type="text" id="respuesta3Text" name="respuesta3Text" required><br><br>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="card m-2 w-50 mx-auto card-chica">
                            <div class="input-container">
                                <label for="respuesta4">Respuesta 4:</label><br>
                                <input type="radio" id="respuesta4" name="correcta" value="respuesta4" required>
                                <input type="text" id="respuesta4Text" name="respuesta4Text" required><br><br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-center" style="margin-top: 0.5em;">
                    <div class="col-12">
                        <button class="btn btn-success boton" type="submit">Sugerir!</button>
                    </div>
                </div>
            </form>
        </div>
</body>
</html>